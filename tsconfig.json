{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom",
      "dom.iterable"
    ],
    "noImplicitUseStrict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es5",
    "allowJs": true,
    "strict": false
  },
  "include": [
    "src",
    "package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}